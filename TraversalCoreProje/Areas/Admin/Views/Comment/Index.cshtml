@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<br />
<h3>Yorum Listesi</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı</th>
        <th>Rota</th>
        <th>Tarih</th>
        <th>Sil</th> 
    </tr>
    @foreach(var item in Model)
    {
        count++;
        <tr> 
            <td>@count</td>
            <td>@item.CommentUser</td>
            <td>@item.Destination.City</td>
           @*  <td>@item.CommentDate.ToShortDateString()</td> *@
           <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
            <td><a href="/Admin/Comment/DeleteComment/@item.DestinationId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>

