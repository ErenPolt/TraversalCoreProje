@model List<ContactUs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<br />
<h3>Bize Ulaşın Mesajları</h3>
<table class="table table-bordered">
<tr>
    <th>#</th>
    <th>Gönderen</th>
    <th>Gönderen Mail</th>
    <th>Konu</th>
    <th>Tarih</th>
    <th>Sil</th>
    <th>Mesajı Aç</th>
</tr>
    @foreach(var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Mail</td>
            <td>@item.Subject</td>
            <td>@item.MessageDate.ToString("dd.MMM.yyyy")</td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn-outline-info">Mesaj Aç</a></td>
        </tr>
    }
</table>

